<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" a:layout_width="match_parent"
    a:layout_height="match_parent" a:paddingLeft="@dimen/activity_horizontal_margin"
    a:gravity="center_horizontal"
    a:paddingRight="@dimen/activity_horizontal_margin"
    a:paddingTop="@dimen/activity_vertical_margin"
    a:paddingBottom="@dimen/activity_vertical_margin"
    a:orientation="vertical"
    tools:context=".MainActivity">

    <TextView a:text="@string/title" a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:textAppearance="?android:attr/textAppearanceLarge"
        a:id="@+id/helloText" />
    <Button
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:text="@string/main.play"
        a:id="@+id/startCard"
        a:layout_below="@+id/helloText"
        a:layout_centerHorizontal="true"
        />
    <Button
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:text="@string/main.cardSet"
        a:id="@+id/main_cardSet"
        a:layout_below="@+id/helloText"
        a:layout_centerHorizontal="true"
        />

</LinearLayout>
